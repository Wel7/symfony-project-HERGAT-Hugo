{% extends 'base.html.twig' %}

{% block title %}Hello UserController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Hello
			{{ controller_name }}! ✅</h1>

		This friendly message is coming from:
		<ul>
			<li>Your controller at
				<code>/var/www/symfony/src/Controller/UserController.php</code>
			</li>
			<li>Your template at
				<code>/var/www/symfony/templates/user/index.html.twig</code>
			</li>
		</ul>
	</div>
	<a href="{{ path('app_logout') }}" class="btn btn-danger" onclick="event.preventDefault(); document.getElementById('logout-form').submit();">
		Déconnexion
	</a>

	<!-- Formulaire de déconnexion caché -->
	<form id="logout-form" action="{{ path('app_logout') }}" method="post" style="display: none;">
		<input type="hidden" name="_token" value="{{ csrf_token('logout') }}">
	</form>
{% endblock %}
