{% include 'base.html.twig'%}
{% block body %}
	<div>
		<a href="/collections/bao">
			<img srcset="{{ asset('images/Bao_Album_Drop_Desktop_Banner.webp') }}" loading="lazy" alt="" width="2600" height="1100.0" class="img-fluid"></a>
	</div>
	<div class="container mt-3">
		<div class="row row-cols-1 row-cols-md-3 g-4">
			{% for product in pagination %}
				<div class="col">
					<div class="relative">
						<a href="/product/{{ product.name|replace({' ': '-'})|lower }}" class="text-reset text-decoration-none">
							<div class="card h-100 shadow-sm">
								<div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light" data-mdb-ripple-color="light">
									<img loading="lazy" src="{{ asset(product.image[0].url) }}" alt="image_not_found" class="card-img-top"/>
									<div class="hover-overlay">
										<div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
									</div>
								</div>
								<div class="card-body text-center">
									<h5 class="card-title mb-3">{{ product.name }}</h5>
									<h6 class="mb-3">{{ product.price }}
										â‚¬</h6>
								</div>
							</div>
						</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
	<div class="container d-flex flex-column mt-3 mb-3">
		<div class="mx-auto">
			<div class="navigation ">
				{{ knp_pagination_render(pagination) }}
			</div>
		</div>
	</div>
{% endblock %}
